extends ../layouts/page.pug

block prepend vars
  -var pageTitle = "Holiday Extras Travel Insurance Case Study | Leaf"
  -var metaUrl = "https://weareleaf.com/holiday-extras"
  -var metaTitle = "Holiday Extras Travel Insurance Case Study"
  -var metaDescription = "Having successfully reimagined their mobile booking process, Holiday Extras asked us to explore a customer-first approach to selling travel insurance online."
  -var pageClass = "holiday-extras"

  -var heroHeading = "Painless insurance quotes"
  -var heroSubheading = "Holiday Extras wanted the experience of buying travel insurance online to match that of their award-winning cell-centre."

block pageComponents

  +hero({
    heading: heroHeading,
    subheading: heroSubheading,
    subheadingModifier: "narrow",
    introImage: true,
    image: {
      src: "/assets/images/case-studies/hx/image-1.png",
      alt: "6 wireframed screens showing our process of mapping the users journey."
    },
    imageModifier: "hx"
  })

  section.section
    .container
      .hx-challenge
        .hx-challenge__items
          .hx-details
            .hx-details__tags
              +detail-tags({
                heading: "What we did",
                modifier: "hx",
                tags: [
                  {
                    icon: "assets/images/case-studies/icons/pen.svg",
                    text: "Content writing"
                  },
                  {
                    icon: "assets/images/case-studies/icons/data.svg",
                    text: "Data analysis"
                  },
                  {
                    icon: "assets/images/case-studies/icons/switch.svg",
                    text: "Form design"
                  },
                  {
                    icon: "assets/images/case-studies/icons/journey.svg",
                    text: "Journey mapping"
                  },
                  {
                    icon: "assets/images/case-studies/icons/prototype.svg",
                    text: "Prototypes"
                  },
                  {
                    icon: "assets/images/case-studies/icons/ear.svg",
                    text: "Stakeholder interviews"
                  },
                  {
                    icon: "assets/images/case-studies/icons/wireframe.svg",
                    text: "Wireframes"
                  }
                ]
              })
            .hx-details__image
              img(src="/assets/images/case-studies/hx/image-3.jpg" alt="A customer service rep looking very happy while wearing a headset.")

  section.section
    .container
      +image({
        context: "content-block",
        src: "/assets/images/case-studies/hx/image-10.png",
        alt: "An autocomplete search field to help customers find their destination faster, and with less typing.",
        modifier: "hx-image-10"
      })

  section.section
    .container
      +image({
        context: "content-block",
        src: "/assets/images/case-studies/hx/image-11.png",
        alt: "The six types of trip a customer can choose, including Business trip, cruise, golf trip, hazardous activities, winter sports, and your wedding.",
        modifier: "hx-image-11"
      })

  section.section
    .container
      +image({
        context: "content-block",
        src: "/assets/images/case-studies/hx/image-12.png",
        alt: "The five steps a customer goes through in the quote process: 1. Trip, 2. People, 3. Cover, 4. Details, and 5. Payment.",
        modifier: "hx-image-12"
      })

  section.section
    .container
    .centered-content.centered-content--hx
      .bg-shapes
        .bg-shape.bg-shape--1
          img(src="/assets/images/case-studies/hx/shape.png", alt="Background shape")
        .bg-shape.bg-shape--2
          img(src="/assets/images/case-studies/hx/shape.png", alt="Background shape")
      .container
        .grid.grid--center-text
          .grid__item
        figure.hx-image-8
          img(src="/assets/images/case-studies/hx/image-8.png" alt="The five steps a customer goes through in the quote process: 1. Trip, 2. People, 3. Cover, 4. Details, and 5. Payment.")

  section.section
    .container
      +image({
        context: "content-block",
        src: "/assets/images/case-studies/hx/image-13.png",
        alt: "A full description of jargon-free illnesses that a customer can choose from in order to declare any pre-exisiting medical conditions.",
        modifier: "hx-image-13"
      })

  section.section
    .container
      .hx-outcome
        .hx-outcome__content
          h2.content-block__heading The outcome
          +metrics({
            heading: "user testing",
            items: [
              {
                unit: "233%",
                subtext: "quicker to see a price",
                text: "It took users an average of 1 min and 24 secs to see their price, compared to 3 mins and 16 secs in the previous version."
              },
              {
                unit: "74",
                subtext: "fewer interactions to see a price",
                text: "Users tapped their screen an average of 68 times before they saw their price, compared to 142 times in the previous version."
              },
            ]
          })
          +testimonial({
            quote: "Leaf were a pleasure to work with – always available and willing to offer advice or to put forward constructive suggestions. The decision to work with them is one we haven’t regretted, and I’d gladly recommend them to anyone looking to improve their own booking flow.",
            author: {
              name: "Carl Burdett",
              details: "Digital Marketing Manager — Holiday Extras",
              thumbnail: {
                src: "assets/images/case-studies/hx/carl.png",
                alt: "A picture of Carl Burdett with a purple background behind him."
              }
            }
          })
        .hx-outcome__prototype
          .hx-outcome__main-prototype
            iframe(src="https://marvelapp.com/1cbg8j3g?emb=1&iosapp=false&frameless=false", width="500", height="1033", frameborder="0", allowtransparency="true", title="Holiday Extras Prototype")

