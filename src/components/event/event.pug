mixin event(c)
  - var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
  - var month = parseInt(c.date.slice(5), 10)
  - var year = c.date.slice(0, 4)

  .event
    time.event__date(datetime= c.date)= months[month + -1] + " " + year
    h2.event__heading= c.heading
    p.event__text= c.text