mixin employment(c)
  .employment
    .employment__thumbnail(class= c.modifier ? "employment__thumbnail--" + c.modifier : "")
      +image({
        context: "employment",
        src: c.image.src,
        alt: c.image.alt
      })
    .employment__content
      h3.employment__title= c.title
      p.employment__details= c.details
      p.employment__location= c.location
